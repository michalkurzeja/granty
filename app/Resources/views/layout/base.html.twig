<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{{ 'app.name'|trans }} - {% block title %}{% endblock %}</title>
        {%- block stylesheets -%}
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bundled.min.css') }}">
        {%- endblock -%}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {%- block top_nav -%}
            {% include 'layout/top_nav.html.twig' %}
        {%- endblock -%}

        {%- block flash_messages -%}
            <div class="row">
                <div class="column">
                {%- for type, messages in app.session.flashBag.all -%}
                    {%- for message in messages -%}
                        <div class="callout {{ type }}" data-closable>
                            {{ message|trans({}, 'flash_messages') }}
                            <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {%- endfor -%}
                {%- endfor -%}
                </div>
            </div>
        {%- endblock -%}

        <div class="row">
            <div class="column">
                <h1>{%- block page_header -%}{%- endblock -%}</h1>
            </div>
        </div>

        <main class="row">
            <div class="column">
                {%- block pre_body -%}{%- endblock -%}
                {%- block body -%}
                    <div class="callout callout-main {% block body_callout_class %}{% endblock %}">
                        <h4 class="callout-title">{% block body_callout_title %}{% endblock %}</h4>
                        {%- block body_callout -%}
                        {%- endblock -%}
                    </div>
                {%- endblock -%}
                {%- block post_body -%}{%- endblock -%}
            </div>
        </main>

        <footer>
            <small>AGH University of Science and Technology</small>
        </footer>

        {%- block javascripts -%}
            <script type="application/javascript" src="{{ asset('assets/js/bundled.min.js') }}"></script>
        {%- endblock -%}
    </body>
</html>
